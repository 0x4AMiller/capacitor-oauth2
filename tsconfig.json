{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist/esm"
    },
    "files": [
        "src/index.ts"
    ]
}

